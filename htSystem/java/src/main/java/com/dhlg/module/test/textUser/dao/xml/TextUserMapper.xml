<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dhlg.module.test.textUser.dao.TextUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dhlg.module.test.textUser.entity.TextUser">
        <id column="id" property="id" />
        <result column="address" property="address" />
        <result column="gender" property="gender" />
        <result column="name" property="name" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
                address,                gender,                id,                name    </sql>

    <select id="queryByCondition" parameterType="com.dhlg.utils.common.Parameter" resultType="com.dhlg.module.test.textUser.entity.TextUser">
        select * from text_user
        <trim prefix="where" prefixOverrides="and">
            <if test="parameter.condition != null and parameter.condition.queryContent !=null and parameter.condition.queryContent !='' ">
                CONCAT(
                            address
                            ,gender
                            ,name
                ) like concat('%',#{parameter.condition.queryContent},'%')
            </if>
        </trim>
    </select>

    <select id="listFieldQuery" parameterType="java.util.Map" resultMap="BaseResultMap">

        select * from text_user
        <trim prefix="where" prefixOverrides="and">

                    <if test=" parameter.address !=null and parameter.address !='' ">
                        and address like concat('%',#{parameter.address},'%')
                    </if>


                    <if test=" parameter.gender !=null and parameter.gender !='' ">
                        and gender like concat('%',#{parameter.gender},'%')
                    </if>



                    <if test=" parameter.name !=null and parameter.name !='' ">
                        and name like concat('%',#{parameter.name},'%')
                    </if>

        </trim>
        order by id desc
    </select>

</mapper>
