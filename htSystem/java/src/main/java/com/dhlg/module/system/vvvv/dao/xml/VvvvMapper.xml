<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dhlg.module.system.vvvv.dao.VvvvMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dhlg.module.system.vvvv.entity.Vvvv">
        <result column="create_user" property="createUser" />
        <result column="vvvv" property="vvvv" />
        <result column="update_time" property="updateTime" />
        <result column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_user" property="updateUser" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
create_user,vvvv,update_time,id,create_time,update_user    </sql>

    <select id="queryByCondition" parameterType="com.dhlg.module.system.vvvv.entity.Vvvv" 
    resultType="com.dhlg.module.system.vvvv.entity.Vvvv">
        select * from vvvv
        <trim prefix="where" prefixOverrides="and">
            <if test="params.vvvv != null and params.vvvv !=''">
                and vvvv like concat('%',#{params.vvvv},'%')
            </if>
            <if test="params.createTimeFrom != null">
                and create_time &gt;= #{params.create_timeFrom}
            </if>
            <if test="params.createTimeTo != null">
                and create_time &lt; DATE_ADD(#{params.create_timeTo}, INTERVAL 1 DAY)
            </if>
        </trim>
    </select>

    <select id="listFieldQuery" parameterType="java.util.Map" resultMap="BaseResultMap">
        select * from vvvv
    </select>

</mapper>
